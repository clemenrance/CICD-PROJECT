pipeline{

     agent any

     stages{

          stage('git checkout'){

               steps{
                   git branch: 'main', url: 'https://github.com/clemenrance/CICD-PROJECT.git'
               }
            }   
          stage('unit testig'){

               steps{
                   sh 'mvn test'
               }     
          }
          stage('integration testing'){

               steps{
                   sh 'mvn verify -DskiUnitTests'
               }     
          }
          stage('maven Build'){

               steps{
                   sh 'mvn clean install'
               }     
          }
          stage('Static Test Analysis in sonarqube'){

               steps{
                   script{
                    withSonarQubeEnv(credentialsId: 'new-aauth') {
                      sh 'mvn clean package sonar:sonar'
                   }
               }     
           }
         }
         stage('Quality Gate Status'){

               steps{

                   script{

                    waitForQualityGate abortPipeline: false, credentialsId: 'new-aauth'
                }
            }
         }
         stage('Upload war file to nexus'){

            steps{

                script{

                   def readPomVersion=readMavenPom file: 'pom.xml'

                   def nexusRepo = readPomVersion.version.endsWith("SNAPSHOT") ? "demoapp-snapshot" : "demoapp-release"
                   nexusArtifactUploader artifacts: 
                    [
                        [
                          artifactId: 'springboot', 
                          classifier: '', 
                          file: 'target/Uber.jar', 
                          type: 'jar'
                          ]
                     ], 
                    credentialsId: 'nexus-authentication', 
                    groupId: 'com.example', 
                    nexusUrl: '54.204.251.196:8081', 
                    nexusVersion: 'nexus3', 
                    protocol: 'http', 
                    repository: 'nexusRepo', 
                    version: "${readPomVersion.version}"
                }
             }
         }
    }
}  
